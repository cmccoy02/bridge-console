{
  "name": "bridge-console",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.js",
  "author": "Bridge Team",
  "description": "Technical Debt Management Platform",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"vite\" \"wait-on http://localhost:3000 http://localhost:3001/api/health && electron .\" --names \"SERVER,VITE,ELECTRON\" --prefix-colors \"blue,magenta,green\"",
    "dev:web": "concurrently \"npm run server\" \"vite\" --names \"SERVER,VITE\" --prefix-colors \"blue,magenta\"",
    "build": "tsc && vite build && node build-electron.cjs",
    "build:web": "tsc && vite build",
    "build:mac": "tsc && vite build && node build-electron.cjs --mac",
    "build:win": "tsc && vite build && node build-electron.cjs --win",
    "build:linux": "tsc && vite build && node build-electron.cjs --linux",
    "preview": "vite preview",
    "server": "node server/index.js",
    "start": "electron .",
    "test:api": "node test-api.js",
    "cleanup": "node cleanup-temp.js",
    "migrate": "node migrate-db.js",
    "reset-db": "rm -f bridge.sqlite && echo 'Database reset. Restart server to recreate.'"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.6.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "depcheck": "^1.4.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.292.0",
    "madge": "^6.1.0",
    "npm-check-updates": "^16.14.6",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.9.0",
    "repomix": "^0.2.0",
    "simple-git": "^3.21.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.bridge.console",
    "productName": "Bridge",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*",
      "server/**/*"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": true,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "public/**/*",
      "package.json",
      "!node_modules/.cache",
      "!**/*.map",
      "!**/test/**",
      "!**/tests/**",
      "!**/*.md",
      "!**/LICENSE*",
      "!**/CHANGELOG*",
      "!temp_scans/**",
      "!temp_updates/**",
      "!.git/**",
      "!.vscode/**",
      "!.cursor/**",
      "!*.sqlite",
      "!*.log"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dir",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
