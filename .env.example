# Bridge Console Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# Leave empty for SQLite (local development)
# Set to PostgreSQL connection string for production (Supabase, etc.)
DATABASE_URL=

# =============================================================================
# GITHUB OAUTH (Required for authentication)
# =============================================================================
# Create at: https://github.com/settings/developers -> OAuth Apps
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# OAuth callback URL - update for production
# Local: http://localhost:3001/api/auth/electron-callback
# Production: https://api.yoursite.com/api/auth/electron-callback
GITHUB_REDIRECT_URI=http://localhost:3001/api/auth/electron-callback

# =============================================================================
# SECURITY (Required for production)
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=

# =============================================================================
# CORS (Required for production)
# =============================================================================
# Comma-separated list of allowed frontend origins
# Local: http://localhost:3000,http://localhost:5173
# Production: https://console.yoursite.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# OPTIONAL
# =============================================================================
# GitHub Personal Access Token (increases API rate limits)
GITHUB_TOKEN=

# Google Gemini API Key (for AI-powered features)
GEMINI_API_KEY=

# Server configuration
NODE_ENV=development
PORT=3001
